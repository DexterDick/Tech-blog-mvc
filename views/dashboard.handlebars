{{#if blogs.length}}

  {{#each blogs as |blog|}}
    <h3>{{blog.title}}</h3>
    <h5>{{blog.content}}</h5>
  {{/each}}
{{/if}}

{{title}}
<section class='dashboard-section'>
  <h2 class='form-heading'>Creat New Post</h2>
  <div>
    <form class='new-blog-post-form'>
      <label for='title'>Title</label>
      <input type='text' id='blog-title' />
      <label for='password-login'>Content</label>
      <textarea type='textarea' id='blog-content' rows='6'> </textarea>
      <button type='submit' class='btn'>Create</button>
    </form>
  </div>
</section>

<a href='/createpost' class='newpost'>+ New Post</a>
<script src='./js/dashboard.js'></script>